
<%= form_with model: @student do |form| %>

<div>
	<%= form.label :first_name %><br>
	<%= form.text_field :first_name%>
</div>
<div>
	<%= form.label :date_of_birth %><br>
	<%= form.text_field :date_of_birth %>
</div>
<div>
	<%= form.label :adress %><br>
	<%= form.text_field :adress %>
</div>
<div>
	<%= form.label :mobile_number %><br>
	<%= form.text_field :mobile_number %>
</div>
<div>
	<%= form.submit %>
</div>
<% end %>